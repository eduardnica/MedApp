<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/consultation_background"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageConsultation"
        android:layout_width="203dp"
        android:layout_height="176dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="110dp"
        android:src="@drawable/consultation_bk" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/twConsultation"
        android:layout_below="@id/imageConsultation"
        android:text="Consultation Request"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_margin="30dp"
        android:gravity="center"/>



    <Spinner
        android:id="@+id/spinnerCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twConsultation"
        android:layout_margin="20dp"
        android:gravity="center" />

    <Spinner
        android:id="@+id/spinnerHospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@+id/spinnerCity"
        android:gravity="center" />

    <Spinner
        android:id="@+id/spinnerSpecialization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@+id/spinnerHospital"
        android:gravity="center" />

    <EditText
        android:id="@+id/editTextDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerSpecialization"
        android:layout_margin="20dp"
        android:hint="Select Date and Time"
        android:focusableInTouchMode="true"
        android:cursorVisible="false"
        android:focusable="false"
        android:inputType="none"/>


    <Spinner
        android:id="@+id/spinnerTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@+id/editTextDateTime"
        android:gravity="center" />


    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRequest"
        android:layout_below="@id/spinnerTime"
        android:text="Request"
        android:backgroundTint="@color/myColor"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        />



</RelativeLayout>