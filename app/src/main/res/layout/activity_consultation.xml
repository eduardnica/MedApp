<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/consultation_background"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageConsultation"
        android:layout_width="203dp"
        android:layout_height="176dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="110dp"
        android:src="@drawable/consultation_bk" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/twConsultation"
        android:layout_below="@id/imageConsultation"
        android:text="Consultation Request"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:gravity="center"/>



    <Spinner
        android:id="@+id/spinnerCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twConsultation"
        android:layout_margin="10dp"
        android:gravity="center" />

    <Spinner
        android:id="@+id/spinnerHospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/spinnerCity"
        android:gravity="center" />

    <Spinner
        android:id="@+id/spinnerSpecialization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/spinnerHospital"
        android:gravity="center" />


    <GridLayout
        android:id="@+id/gridLayoutDate"
        android:layout_below="@id/spinnerSpecialization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2">
        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="60dp"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:hint="Select Date"
            android:inputType="none" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="60dp"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="9:00"
            android:focusableInTouchMode="false"
            android:inputType="none" />

    </GridLayout>


<!--    <Spinner-->
<!--        android:id="@+id/spinnerTime"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_margin="20dp"-->
<!--        android:layout_below="@+id/editTextDateTime"-->
<!--        android:gravity="center" />-->


    <GridLayout
        android:id="@+id/gridLayoutHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridLayoutDate"
        android:layout_marginTop="10dp"
        android:columnCount="4"
        android:rowCount="2">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHour8"
            android:text="8:00"
            android:backgroundTint="@color/myColor"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHour8_"
            android:text="8:30"
            android:backgroundTint="@color/myColor"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHour9"
            android:text="9:00"
            android:backgroundTint="@color/myColor"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHour9_"
            android:text="9:30"
            android:backgroundTint="@color/myColor"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHour10"
            android:text="10:00"
            android:backgroundTint="@color/myColor"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHour10_"
            android:text="10:30"
            android:backgroundTint="@color/myColor"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHour11"
            android:text="11:00"
            android:backgroundTint="@color/myColor"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHour11_"
            android:text="11:30"
            android:backgroundTint="@color/myColor"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            />
    </GridLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRequest"
        android:layout_below="@id/gridLayoutHours"
        android:text="Request"
        android:backgroundTint="@color/myColor"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        />



</RelativeLayout>