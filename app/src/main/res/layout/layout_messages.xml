<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linerLayoutMessages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/male_user" />

            <LinearLayout
                android:layout_toStartOf="@id/twUnseenMessages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/imageViewProfile" >

                <TextView
                    android:id="@+id/twName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/imaveViewProfile"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Fullname"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/twLastMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/myColor"
                    android:textSize="15sp"
                    android:text="Mesaj random"/>

            </LinearLayout>

            <TextView
                android:id="@+id/twUnseenMessages"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text="1"
                android:background="@drawable/rounded_corner"
                android:textSize="10sp"
                android:textColor="@color/myColor"
                android:gravity="center"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#14000000"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>



    </LinearLayout>

</RelativeLayout>